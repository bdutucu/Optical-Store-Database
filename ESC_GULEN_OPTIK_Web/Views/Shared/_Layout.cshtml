@using ESC_GULEN_OPTIK_Web.Filters
@using ESC_GULEN_OPTIK_Web.Models
@{
    var currentUser = Context.Session.GetCurrentUser();
    var isLoggedIn = currentUser != null;
    var isAdmin = currentUser?.IsAdmin ?? false;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ESC Gülen Optik</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        :root {
            --primary: #1e3a5f;
            --secondary: #3d5a80;
            --accent: #4299e1;
        }
        .navbar-custom {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
        }
        .card { border-radius: 10px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); }
        .btn-primary { background-color: var(--primary); border-color: var(--primary); }
        .btn-primary:hover { background-color: var(--secondary); border-color: var(--secondary); }
        .table th { background-color: var(--primary); color: white; }
        .stat-card { border-left: 4px solid var(--primary); }
        .user-badge { 
            background: rgba(255,255,255,0.15); 
            border-radius: 20px; 
            padding: 5px 15px;
            font-size: 0.85rem;
        }
        .admin-badge {
            background: #e53e3e;
            color: white;
            font-size: 0.7rem;
            padding: 2px 8px;
            border-radius: 10px;
            margin-left: 5px;
        }
        .dropdown-menu { border-radius: 10px; box-shadow: 0 5px 20px rgba(0,0,0,0.15); }
        .dropdown-item:hover { background-color: var(--primary); color: white; }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark navbar-custom mb-3">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">👓 ESC Gülen Optik</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    @if (isLoggedIn)
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-house me-1"></i>Dashboard
                                </a>
                            </li>
                            
                            <!-- Sales Dropdown -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-cart me-1"></i>Sales
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Sales" asp-action="CreateSale"><i class="bi bi-plus-circle me-2"></i>New Sale</a></li>
                                    <li><a class="dropdown-item" asp-controller="Sales" asp-action="CreateRepair"><i class="bi bi-tools me-2"></i>New Repair</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Sales" asp-action="Index"><i class="bi bi-list me-2"></i>All Transactions</a></li>
                                </ul>
                            </li>

                            <!-- Payments -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-cash me-1"></i>Payments
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Payment" asp-action="Create"><i class="bi bi-plus-circle me-2"></i>Receive Payment</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Payment" asp-action="Index"><i class="bi bi-list me-2"></i>Payment History</a></li>
                                </ul>
                            </li>

                            <!-- Customers & Prescriptions -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-people me-1"></i>Customers
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Customer" asp-action="Create"><i class="bi bi-person-plus me-2"></i>New Customer</a></li>
                                    <li><a class="dropdown-item" asp-controller="Customer" asp-action="Index"><i class="bi bi-people me-2"></i>All Customers</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Prescription" asp-action="Create"><i class="bi bi-file-medical me-2"></i>New Prescription</a></li>
                                    <li><a class="dropdown-item" asp-controller="Prescription" asp-action="Index"><i class="bi bi-file-earmark-medical me-2"></i>All Prescriptions</a></li>
                                </ul>
                            </li>

                            <!-- Products -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-box-seam me-1"></i>Products
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Product" asp-action="Create"><i class="bi bi-plus-circle me-2"></i>Add Product</a></li>
                                    <li><a class="dropdown-item" asp-controller="Product" asp-action="Index"><i class="bi bi-grid me-2"></i>All Products</a></li>
                                    @if (isAdmin)
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="Material" asp-action="Index"><i class="bi bi-gem me-2"></i>Manage Materials</a></li>
                                    }
                                </ul>
                            </li>

                            @if (isAdmin)
                            {
                                <!-- Admin Only: Staff Management -->
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Staff" asp-action="Index">
                                        <i class="bi bi-person-badge me-1"></i>Staff
                                    </a>
                                </li>

                                <!-- Admin Only: Reports Dropdown -->
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="bi bi-graph-up me-1"></i>Reports
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Reports" asp-action="Index"><i class="bi bi-speedometer2 me-2"></i>Reports Dashboard</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="Reports" asp-action="MonthlyFinancial"><i class="bi bi-calendar-month me-2"></i>Monthly Financial</a></li>
                                        <li><a class="dropdown-item" asp-controller="Reports" asp-action="DailySummary"><i class="bi bi-calendar-day me-2"></i>Daily Summary</a></li>
                                        <li><a class="dropdown-item" asp-controller="Reports" asp-action="StaffPerformance"><i class="bi bi-trophy me-2"></i>Staff Performance</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="Reports" asp-action="CustomerBalances"><i class="bi bi-exclamation-triangle me-2"></i>Customer Balances</a></li>
                                        <li><a class="dropdown-item" asp-controller="Reports" asp-action="Inventory"><i class="bi bi-box-seam me-2"></i>Inventory Report</a></li>
                                    </ul>
                                </li>
                            }
                        </ul>

                        <!-- User Menu (Right Side) -->
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle user-badge" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle me-1"></i>
                                    @currentUser?.FullName
                                    @if (isAdmin)
                                    {
                                        <span class="admin-badge">ADMIN</span>
                                    }
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-danger" asp-controller="Auth" asp-action="Logout">
                                            <i class="bi bi-box-arrow-right me-2"></i>Logout
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <!-- Not logged in - show login button -->
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link btn btn-outline-light btn-sm px-3" asp-controller="Auth" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Login
                                </a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center py-3">
        &copy; 2025 ESC Gülen Optik - Database Project
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
