@model ESC_GULEN_OPTIK_Web.Models.Staff
@{ ViewData["Title"] = "Staff Details"; }

<h2>Staff Details</h2>
<hr />

<div class="card">
    <div class="card-header"><strong>@Model.FullName</strong></div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.StaffID</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Phone</dt>
            <dd class="col-sm-9">@(Model.PhoneNumber ?? "-")</dd>

            <dt class="col-sm-3">Position</dt>
            <dd class="col-sm-9">@(Model.Position ?? "-")</dd>

            <dt class="col-sm-3">Salary</dt>
            <dd class="col-sm-9">@Model.Salary.ToString("N2") â‚º</dd>

            <dt class="col-sm-3">Date of Birth</dt>
            <dd class="col-sm-9">@(Model.DateOfBirth?.ToString("d") ?? "-")</dd>

            <dt class="col-sm-3">Age</dt>
            <dd class="col-sm-9">@(Model.Age ?? 0)</dd>

            <dt class="col-sm-3">Job Start</dt>
            <dd class="col-sm-9">@Model.JobStartDate.ToString("d")</dd>

            <dt class="col-sm-3">Experience</dt>
            <dd class="col-sm-9"><span class="badge bg-info">@(Model.YearsOfExperience ?? 0) years</span></dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.StaffID" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>

