@model List<ESC_GULEN_OPTIK_Web.Models.Staff>
@{ ViewData["Title"] = "Staff"; }

<div class="d-flex justify-content-between mb-3">
    <h2><i class="bi bi-people me-2"></i>Staff Management</h2>
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle me-1"></i>Add Staff</a>
</div>

<div class="card">
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Position</th>
                        <th>Experience</th>
                        <th>Login Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model)
                    {
                        <tr>
                            <td>@s.StaffID</td>
                            <td>
                                <strong>@s.FullName</strong>
                                @if (s.Position?.ToUpper() == "MANAGER")
                                {
                                    <span class="badge bg-danger ms-1">Admin</span>
                                }
                            </td>
                            <td>@s.Email</td>
                            <td>@(s.Position ?? "-")</td>
                            <td><span class="badge bg-info">@(s.YearsOfExperience ?? 0) yrs</span></td>
                            <td>
                                @if (s.HasCredentials)
                                {
                                    <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>Can Login</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark"><i class="bi bi-exclamation-triangle me-1"></i>No Password</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@s.StaffID" class="btn btn-sm btn-secondary" title="View">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@s.StaffID" class="btn btn-sm btn-warning" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@s.StaffID" class="btn btn-sm btn-danger" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-center py-5">
                <p>No staff found.</p>
                <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle me-1"></i>Add Staff</a>
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <small class="text-muted">
        <i class="bi bi-info-circle me-1"></i>
        Staff members without a password cannot login to the system. Click "Edit" to set a password.
    </small>
</div>
