@model ESC_GULEN_OPTIK_Web.Models.Prescription
@{
    ViewData["Title"] = "Delete Prescription";
}

<h2 class="text-danger"><i class="bi bi-exclamation-triangle me-2"></i>Delete Prescription</h2>
<hr />

<div class="alert alert-danger">
    <strong>Warning!</strong> Are you sure you want to delete this prescription? This action cannot be undone.
</div>

<div class="card">
    <div class="card-header bg-danger text-white">
        <strong>Prescription to be deleted</strong>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Prescription ID</dt>
            <dd class="col-sm-9"><strong>#@Model.PrescriptionID</strong></dd>

            <dt class="col-sm-3">Customer</dt>
            <dd class="col-sm-9">@Model.CustomerName</dd>

            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Model.DateOfPrescription.ToString("dd.MM.yyyy")</dd>

            <dt class="col-sm-3">Doctor</dt>
            <dd class="col-sm-9">@(Model.DoctorName ?? "Internal Examination")</dd>

            <dt class="col-sm-3">Right Eye</dt>
            <dd class="col-sm-9">@Model.RightEyeDisplay</dd>

            <dt class="col-sm-3">Left Eye</dt>
            <dd class="col-sm-9">@Model.LeftEyeDisplay</dd>
        </dl>
    </div>
    <div class="card-footer">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="PrescriptionID" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash me-1"></i>Yes, Delete This Prescription
            </button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

