@model List<ESC_GULEN_OPTIK_Web.Models.Product>
@{ ViewData["Title"] = "Products"; }

<div class="d-flex justify-content-between mb-3">
    <h2>Product Catalog</h2>
    <a asp-action="Create" class="btn btn-primary">+ Add Product</a>
</div>

<!-- Filter by Type -->
<div class="mb-3">
    <div class="btn-group">
        <a asp-action="Index" class="btn @(ViewBag.SelectedType == null ? "btn-primary" : "btn-outline-primary")">All</a>
        @foreach (var t in (string[])ViewBag.ProductTypes)
        {
            <a asp-action="Index" asp-route-type="@t" 
               class="btn @(ViewBag.SelectedType == t ? "btn-primary" : "btn-outline-primary")">@t</a>
        }
    </div>
</div>

<!-- Advanced Search with Stored Procedure -->
<div class="card mb-3">
    <div class="card-header">üîç Advanced Search (Using Stored Procedure)</div>
    <div class="card-body">
        <form asp-action="Search" method="get" class="row g-2">
            <div class="col-md-2">
                <select name="category" class="form-select">
                    <option value="">All Categories</option>
                    @foreach (var t in (string[])ViewBag.ProductTypes)
                    {
                        <option value="@t" selected="@(ViewBag.Category == t)">@t</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <input type="text" name="color" class="form-control" placeholder="Color" value="@ViewBag.Color" />
            </div>
            <div class="col-md-2">
                <input type="text" name="material" class="form-control" placeholder="Material" value="@ViewBag.Material" />
            </div>
            <div class="col-md-2">
                <input type="number" name="minPrice" class="form-control" placeholder="Min Price" value="@ViewBag.MinPrice" />
            </div>
            <div class="col-md-2">
                <input type="number" name="maxPrice" class="form-control" placeholder="Max Price" value="@ViewBag.MaxPrice" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Search</button>
            </div>
        </form>
    </div>
</div>

<!-- Quick Filter & Sort -->
<div class="card mb-3">
    <div class="card-body py-2">
        <form asp-action="Index" method="get" class="row g-2 align-items-center">
            <div class="col-auto">
                <label class="col-form-label">Filter by Brand:</label>
            </div>
            <div class="col-md-3">
                <input type="text" name="brand" class="form-control form-control-sm" placeholder="Brand name..." value="@ViewBag.SelectedBrand" />
            </div>
            <div class="col-auto">
                <label class="col-form-label">Sort by:</label>
            </div>
            <div class="col-md-2">
                <select name="sortBy" class="form-select form-select-sm">
                    <option value="brand" selected="@(ViewBag.CurrentSort == "brand")">Brand</option>
                    <option value="price" selected="@(ViewBag.CurrentSort == "price")">Price</option>
                    <option value="stock" selected="@(ViewBag.CurrentSort == "stock")">Stock</option>
                    <option value="type" selected="@(ViewBag.CurrentSort == "type")">Type</option>
                </select>
            </div>
            <div class="col-md-2">
                <select name="sortOrder" class="form-select form-select-sm">
                    <option value="ASC" selected="@(ViewBag.CurrentOrder != "DESC")">Ascending</option>
                    <option value="DESC" selected="@(ViewBag.CurrentOrder == "DESC")">Descending</option>
                </select>
            </div>
            <input type="hidden" name="type" value="@ViewBag.SelectedType" />
            <div class="col-auto">
                <button type="submit" class="btn btn-sm btn-outline-primary">Apply</button>
                <a asp-action="Index" class="btn btn-sm btn-outline-secondary">Clear</a>
            </div>
        </form>
    </div>
</div>

<!-- Table -->
<div class="card">
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>
                            <a asp-action="Index" asp-route-sortBy="brand" asp-route-sortOrder="@(ViewBag.CurrentSort == "brand" && ViewBag.CurrentOrder != "DESC" ? "DESC" : "ASC")" asp-route-type="@ViewBag.SelectedType" class="text-decoration-none text-dark">
                                Brand @(ViewBag.CurrentSort == "brand" ? (ViewBag.CurrentOrder == "DESC" ? "‚Üì" : "‚Üë") : "")
                            </a>
                        </th>
                        <th>
                            <a asp-action="Index" asp-route-sortBy="type" asp-route-sortOrder="@(ViewBag.CurrentSort == "type" && ViewBag.CurrentOrder != "DESC" ? "DESC" : "ASC")" asp-route-type="@ViewBag.SelectedType" class="text-decoration-none text-dark">
                                Type @(ViewBag.CurrentSort == "type" ? (ViewBag.CurrentOrder == "DESC" ? "‚Üì" : "‚Üë") : "")
                            </a>
                        </th>
                        <th>Model</th>
                        <th>Color</th>
                        <th>
                            <a asp-action="Index" asp-route-sortBy="stock" asp-route-sortOrder="@(ViewBag.CurrentSort == "stock" && ViewBag.CurrentOrder != "DESC" ? "DESC" : "ASC")" asp-route-type="@ViewBag.SelectedType" class="text-decoration-none text-dark">
                                Stock @(ViewBag.CurrentSort == "stock" ? (ViewBag.CurrentOrder == "DESC" ? "‚Üì" : "‚Üë") : "")
                            </a>
                        </th>
                        <th>
                            <a asp-action="Index" asp-route-sortBy="price" asp-route-sortOrder="@(ViewBag.CurrentSort == "price" && ViewBag.CurrentOrder != "DESC" ? "DESC" : "ASC")" asp-route-type="@ViewBag.SelectedType" class="text-decoration-none text-dark">
                                Price @(ViewBag.CurrentSort == "price" ? (ViewBag.CurrentOrder == "DESC" ? "‚Üì" : "‚Üë") : "")
                            </a>
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td>@p.ProductID</td>
                            <td><strong>@p.Brand</strong></td>
                            <td><span class="badge bg-secondary">@p.ProductType</span></td>
                            <td>@(p.ModelOrSerial ?? "-")</td>
                            <td>@(p.ColorInfo ?? "-")</td>
                            <td>
                                @if (p.StockQuantity > 5)
                                {
                                    <span class="badge bg-success">@p.StockQuantity</span>
                                }
                                else if (p.StockQuantity > 0)
                                {
                                    <span class="badge bg-warning text-dark">@p.StockQuantity</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Out</span>
                                }
                            </td>
                            <td>@(p.Price?.ToString("N2") ?? "-") ‚Ç∫</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@p.ProductID" class="btn btn-sm btn-secondary">View</a>
                                <a asp-action="Edit" asp-route-id="@p.ProductID" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@p.ProductID" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="card-footer text-muted">
                Total: @Model.Count products
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <p>No products found.</p>
                <a asp-action="Create" class="btn btn-primary">+ Add Product</a>
            </div>
        }
    </div>
</div>
