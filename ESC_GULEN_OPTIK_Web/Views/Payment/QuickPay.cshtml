@model ESC_GULEN_OPTIK_Web.Models.Payment
@{
    ViewData["Title"] = "Quick Payment";
    var paymentTypes = ViewBag.PaymentTypes as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem> ?? new List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>();
    var totalAmount = ViewBag.TotalAmount as decimal? ?? 0;
    var remainingBalance = ViewBag.RemainingBalance as decimal? ?? 0;
    var customerName = ViewBag.CustomerName as string ?? "";
    var transactionType = ViewBag.TransactionType as string ?? "";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-cash me-2"></i>Receive Payment</h2>
    <a asp-controller="Sales" asp-action="Details" asp-route-id="@Model.TransactionID" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to Transaction
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-success text-white">
                <strong>Transaction #@Model.TransactionID</strong>
            </div>
            <div class="card-body">
                <!-- Transaction Info -->
                <div class="mb-4 p-3 bg-light rounded">
                    <div class="row">
                        <div class="col-6">
                            <small class="text-muted">Customer</small>
                            <p class="mb-0 fw-bold">@customerName</p>
                        </div>
                        <div class="col-6">
                            <small class="text-muted">Type</small>
                            <p class="mb-0">
                                <span class="badge bg-secondary">@transactionType</span>
                            </p>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-6">
                            <small class="text-muted">Total Amount</small>
                            <p class="mb-0 fs-5">@totalAmount.ToString("N2") ₺</p>
                        </div>
                        <div class="col-6">
                            <small class="text-muted">Remaining Balance</small>
                            <p class="mb-0 fs-5 text-danger fw-bold">@remainingBalance.ToString("N2") ₺</p>
                        </div>
                    </div>
                </div>

                <form asp-controller="Payment" asp-action="Create" method="post">
                    <input type="hidden" asp-for="TransactionID" />

                    <div class="mb-3">
                        <label asp-for="AmountPaid" class="form-label">Payment Amount (₺) *</label>
                        <input asp-for="AmountPaid" class="form-control form-control-lg text-center fs-3" 
                               type="number" step="0.01" min="0.01" max="@remainingBalance" />
                        <div class="d-flex justify-content-between mt-2">
                            <button type="button" class="btn btn-outline-secondary btn-sm" 
                                    onclick="document.getElementById('AmountPaid').value = @(remainingBalance / 2)">
                                50%
                            </button>
                            <button type="button" class="btn btn-outline-primary btn-sm" 
                                    onclick="document.getElementById('AmountPaid').value = @remainingBalance">
                                Full Balance
                            </button>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PaymentType" class="form-label">Payment Method *</label>
                        <div class="btn-group w-100" role="group">
                            @foreach (var type in paymentTypes)
                            {
                                <input type="radio" class="btn-check payment-type-radio" name="PaymentType" id="pt_@type.Value" value="@type.Value" 
                                       @(type.Value == "Cash" ? "checked" : "")>
                                <label class="btn btn-outline-primary" for="pt_@type.Value">@type.Text</label>
                            }
                        </div>
                    </div>

                    <!-- Credit Card specific fields -->
                    <div id="creditCardFields" class="mb-3" style="display:none;">
                        <label asp-for="CardOwner" class="form-label">Card Owner Name</label>
                        <input asp-for="CardOwner" class="form-control" placeholder="Name on the credit card" />
                    </div>

                    <hr />
                    <button type="submit" class="btn btn-success btn-lg w-100">
                        <i class="bi bi-check-circle me-2"></i>Confirm Payment
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function updatePaymentFields() {
            var selectedType = document.querySelector('input[name="PaymentType"]:checked').value;
            var creditCardFields = document.getElementById('creditCardFields');
            
            // Hide all
            creditCardFields.style.display = 'none';
            
            // Show based on type
            if (selectedType === 'CreditCard') {
                creditCardFields.style.display = 'block';
            }
        }
        
        // Add event listeners to radio buttons
        document.querySelectorAll('.payment-type-radio').forEach(function(radio) {
            radio.addEventListener('change', updatePaymentFields);
        });
        
        // Trigger on page load
        updatePaymentFields();
    </script>
}
