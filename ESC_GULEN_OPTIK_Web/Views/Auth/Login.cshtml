@model ESC_GULEN_OPTIK_Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null; // No layout for login page
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ESC Gülen Optik</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        :root {
            --primary-color: #1a365d;
            --secondary-color: #2c5282;
            --accent-color: #4299e1;
            --glass-bg: rgba(255, 255, 255, 0.95);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
            background: linear-gradient(135deg, #1a365d 0%, #2c5282 50%, #3182ce 100%);
            position: relative;
            overflow: hidden;
        }

        /* Animated background elements */
        body::before {
            content: '';
            position: absolute;
            width: 200%;
            height: 200%;
            background: 
                radial-gradient(circle at 20% 80%, rgba(66, 153, 225, 0.3) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgba(99, 179, 237, 0.2) 0%, transparent 40%),
                radial-gradient(circle at 40% 40%, rgba(144, 205, 244, 0.15) 0%, transparent 30%);
            animation: float 20s ease-in-out infinite;
        }

        @@keyframes float {
            0%, 100% { transform: translate(-10%, -10%) rotate(0deg); }
            50% { transform: translate(-15%, -5%) rotate(5deg); }
        }

        /* Glasses icon decoration */
        .glasses-decoration {
            position: absolute;
            font-size: 15rem;
            color: rgba(255, 255, 255, 0.03);
            z-index: 0;
        }

        .glasses-1 { top: 10%; left: 5%; transform: rotate(-15deg); }
        .glasses-2 { bottom: 10%; right: 5%; transform: rotate(15deg); }

        .login-container {
            position: relative;
            z-index: 10;
            width: 100%;
            max-width: 420px;
            padding: 20px;
        }

        .login-card {
            background: var(--glass-bg);
            border-radius: 24px;
            box-shadow: 
                0 25px 50px -12px rgba(0, 0, 0, 0.25),
                0 0 0 1px rgba(255, 255, 255, 0.1);
            padding: 48px 40px;
            backdrop-filter: blur(10px);
        }

        .logo-section {
            text-align: center;
            margin-bottom: 32px;
        }

        .logo-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 16px;
            box-shadow: 0 10px 30px rgba(26, 54, 93, 0.3);
        }

        .logo-icon i {
            font-size: 2.5rem;
            color: white;
        }

        .logo-section h1 {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--primary-color);
            margin-bottom: 4px;
        }

        .logo-section p {
            color: #718096;
            font-size: 0.95rem;
        }

        .form-floating {
            margin-bottom: 20px;
        }

        .form-floating > .form-control {
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            padding: 16px;
            height: 58px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .form-floating > .form-control:focus {
            border-color: var(--accent-color);
            box-shadow: 0 0 0 4px rgba(66, 153, 225, 0.15);
        }

        .form-floating > label {
            padding: 16px;
            color: #718096;
        }

        .input-icon {
            position: absolute;
            right: 16px;
            top: 50%;
            transform: translateY(-50%);
            color: #a0aec0;
            pointer-events: none;
        }

        .btn-login {
            width: 100%;
            padding: 14px;
            font-size: 1.1rem;
            font-weight: 600;
            border: none;
            border-radius: 12px;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 8px;
        }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(26, 54, 93, 0.35);
            background: linear-gradient(135deg, var(--secondary-color), var(--primary-color));
        }

        .btn-login:active {
            transform: translateY(0);
        }

        .alert {
            border-radius: 12px;
            border: none;
            padding: 14px 18px;
            margin-bottom: 20px;
            font-size: 0.9rem;
        }

        .alert-danger {
            background: #fed7d7;
            color: #c53030;
        }

        .alert-success {
            background: #c6f6d5;
            color: #276749;
        }

        .form-check {
            margin-top: 16px;
        }

        .form-check-input:checked {
            background-color: var(--accent-color);
            border-color: var(--accent-color);
        }

        .footer-text {
            text-align: center;
            margin-top: 24px;
            color: #718096;
            font-size: 0.85rem;
        }

        .text-danger {
            font-size: 0.85rem;
            margin-top: 4px;
        }

        /* Responsive */
        @@media (max-width: 480px) {
            .login-card {
                padding: 32px 24px;
            }
            .logo-icon {
                width: 64px;
                height: 64px;
            }
            .logo-icon i {
                font-size: 2rem;
            }
        }
    </style>
</head>
<body>
    <!-- Decorative glasses icons -->
    <i class="fas fa-glasses glasses-decoration glasses-1"></i>
    <i class="fas fa-glasses glasses-decoration glasses-2"></i>

    <div class="login-container">
        <div class="login-card">
            <div class="logo-section">
                <div class="logo-icon">
                    <i class="fas fa-glasses"></i>
                </div>
                <h1>ESC Gülen Optik</h1>
                <p>Staff Management Portal</p>
            </div>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                </div>
            }

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">
                    <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                </div>
            }

            <form asp-action="Login" method="post">
                <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
                
                <div class="form-floating position-relative">
                    <input type="email" class="form-control" asp-for="Email" placeholder="email@example.com" autocomplete="email" />
                    <label asp-for="Email"><i class="fas fa-envelope me-2"></i>Email Address</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-floating position-relative">
                    <input type="password" class="form-control" asp-for="Password" placeholder="Password" autocomplete="current-password" />
                    <label asp-for="Password"><i class="fas fa-lock me-2"></i>Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-check">
                    <input type="checkbox" class="form-check-input" asp-for="RememberMe" />
                    <label class="form-check-label" asp-for="RememberMe">Remember me</label>
                </div>

                <button type="submit" class="btn btn-login">
                    <i class="fas fa-sign-in-alt me-2"></i>Sign In
                </button>
            </form>

            <p class="footer-text">
                <i class="fas fa-shield-alt me-1"></i>
                Secure login for authorized staff only
            </p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
