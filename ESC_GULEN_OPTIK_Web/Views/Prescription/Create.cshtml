@model ESC_GULEN_OPTIK_Web.Models.Prescription
@{
    ViewData["Title"] = "Create Prescription";
    var customers = ViewBag.Customers as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem> ?? new List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>();
    var currentUserName = ViewBag.CurrentUserName as string ?? "Staff";
}

<h2><i class="bi bi-file-medical-fill me-2"></i>Create New Prescription</h2>
<hr />

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <!-- Basic Info -->
                    <h5 class="mb-3"><i class="bi bi-person me-2"></i>Patient & Doctor Information</h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CustomerID" class="form-label">Customer *</label>
                            <select asp-for="CustomerID" class="form-select" required>
                                <option value="">-- Select Customer --</option>
                                @foreach (var c in customers)
                                {
                                    <option value="@c.Value" selected="@(c.Value == Model.CustomerID.ToString())">@c.Text</option>
                                }
                            </select>
                            <span asp-validation-for="CustomerID" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="DateOfPrescription" class="form-label">Prescription Date *</label>
                            <input asp-for="DateOfPrescription" class="form-control" type="date" />
                            <span asp-validation-for="DateOfPrescription" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DoctorName" class="form-label">External Doctor Name (Optional)</label>
                            <input asp-for="DoctorName" class="form-control" placeholder="Leave empty for internal examination" />
                            <small class="text-muted">Only fill if prescription is from an external doctor</small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Examined By</label>
                            <div class="form-control bg-light">
                                <i class="bi bi-person-badge me-1"></i>@currentUserName
                            </div>
                            <small class="text-muted">Prescription will be recorded under your name</small>
                            <input type="hidden" asp-for="StaffID" />
                        </div>
                    </div>

                    <hr />

                    <!-- Eye Measurements -->
                    <h5 class="mb-3"><i class="bi bi-eye me-2"></i>Eye Measurements</h5>
                    
                    <div class="row">
                        <!-- Right Eye -->
                        <div class="col-md-6">
                            <div class="card bg-light mb-3">
                                <div class="card-header">
                                    <strong>üëÅÔ∏è Right Eye (OD)</strong>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-4 mb-2">
                                            <label asp-for="Right_SPH" class="form-label small">SPH (Sphere)</label>
                                            <input asp-for="Right_SPH" class="form-control" type="number" step="0.25" 
                                                   placeholder="-2.50" min="-20" max="20" />
                                        </div>
                                        <div class="col-4 mb-2">
                                            <label asp-for="Right_CYL" class="form-label small">CYL (Cylinder)</label>
                                            <input asp-for="Right_CYL" class="form-control" type="number" step="0.25" 
                                                   placeholder="-0.75" min="-10" max="10" />
                                        </div>
                                        <div class="col-4 mb-2">
                                            <label asp-for="Right_AX" class="form-label small">Axis (¬∞)</label>
                                            <input asp-for="Right_AX" class="form-control" type="number" 
                                                   placeholder="180" min="0" max="180" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Left Eye -->
                        <div class="col-md-6">
                            <div class="card bg-light mb-3">
                                <div class="card-header">
                                    <strong>üëÅÔ∏è Left Eye (OS)</strong>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-4 mb-2">
                                            <label asp-for="Left_SPH" class="form-label small">SPH (Sphere)</label>
                                            <input asp-for="Left_SPH" class="form-control" type="number" step="0.25" 
                                                   placeholder="-2.50" min="-20" max="20" />
                                        </div>
                                        <div class="col-4 mb-2">
                                            <label asp-for="Left_CYL" class="form-label small">CYL (Cylinder)</label>
                                            <input asp-for="Left_CYL" class="form-control" type="number" step="0.25" 
                                                   placeholder="-0.75" min="-10" max="10" />
                                        </div>
                                        <div class="col-4 mb-2">
                                            <label asp-for="Left_AX" class="form-label small">Axis (¬∞)</label>
                                            <input asp-for="Left_AX" class="form-control" type="number" 
                                                   placeholder="180" min="0" max="180" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr />
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle me-1"></i>Create Prescription
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card bg-info text-white">
            <div class="card-header">
                <strong><i class="bi bi-info-circle me-1"></i>Prescription Guide</strong>
            </div>
            <div class="card-body">
                <p><strong>SPH (Sphere):</strong> Indicates nearsightedness (-) or farsightedness (+)</p>
                <p><strong>CYL (Cylinder):</strong> Indicates astigmatism correction</p>
                <p><strong>Axis:</strong> Direction of astigmatism (0-180¬∞)</p>
                <hr />
                <p class="mb-0"><small>
                    <i class="bi bi-lightbulb me-1"></i>
                    Tip: If the prescription is from an external doctor, enter their name. 
                    If examined internally, select the staff member who performed the exam.
                </small></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

