@{
    ViewData["Title"] = "Dashboard";
    var isAdmin = ViewBag.IsAdmin ?? false;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">Welcome, @ViewBag.UserName!</h2>
        <p class="text-muted mb-0">
            @if (isAdmin)
            {
                <span class="badge bg-danger me-2">Administrator</span>
            }
            else
            {
                <span class="badge bg-secondary me-2">Staff</span>
            }
            @DateTime.Now.ToString("dddd, MMMM dd, yyyy")
        </p>
    </div>
</div>

<!-- Today's Summary Cards -->
<div class="row mb-4">
    <div class="col-md-3 col-sm-6 mb-3">
        <div class="card stat-card h-100 border-success" style="border-left: 4px solid #38a169;">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="mb-0 text-success">@(Convert.ToDecimal(ViewBag.TodayCashCollected).ToString("N2")) ₺</h3>
                        <small class="text-muted">Today's Cash</small>
                    </div>
                    <div class="text-success opacity-50">
                        <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M1 3a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1H1zm7 8a2 2 0 1 0 0-4 2 2 0 0 0 0 4z"/>
                            <path d="M0 5a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1V5zm3 0a2 2 0 0 1-2 2v4a2 2 0 0 1 2 2h10a2 2 0 0 1 2-2V7a2 2 0 0 1-2-2H3z"/>
                        </svg>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 mb-3">
        <div class="card stat-card h-100 border-primary" style="border-left: 4px solid #3182ce;">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="mb-0 text-primary">@(Convert.ToDecimal(ViewBag.TodayRevenue).ToString("N2")) ₺</h3>
                        <small class="text-muted">Today's Revenue</small>
                    </div>
                    <div class="text-primary opacity-50">
                        <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M0 0h1v15h15v1H0V0Zm14.817 3.113a.5.5 0 0 1 .07.704l-4.5 5.5a.5.5 0 0 1-.74.037L7.06 6.767l-3.656 5.027a.5.5 0 0 1-.808-.588l4-5.5a.5.5 0 0 1 .758-.06l2.609 2.61 4.15-5.073a.5.5 0 0 1 .704-.07Z"/>
                        </svg>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 mb-3">
        <div class="card stat-card h-100 border-warning" style="border-left: 4px solid #d69e2e;">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="mb-0 text-warning">@(Convert.ToDecimal(ViewBag.PendingPayments).ToString("N2")) ₺</h3>
                        <small class="text-muted">Pending Payments</small>
                    </div>
                    <div class="text-warning opacity-50">
                        <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                        </svg>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 mb-3">
        <div class="card stat-card h-100 border-info" style="border-left: 4px solid #00b5d8;">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="mb-0 text-info">@ViewBag.TodayTransactions</h3>
                        <small class="text-muted">Today's Transactions</small>
                    </div>
                    <div class="text-info opacity-50">
                        <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2zm13 2.383-4.708 2.825L15 11.105V5.383zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741zM1 11.105l4.708-2.897L1 5.383v5.722z"/>
                        </svg>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Database Stats -->
<div class="row mb-4">
    @if (isAdmin)
    {
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h4 class="mb-0">@ViewBag.StaffCount</h4>
                    <small class="text-muted">Staff Members</small>
                </div>
            </div>
        </div>
    }
    <div class="col-md-3 col-sm-6 mb-3">
        <div class="card h-100">
            <div class="card-body text-center">
                <h4 class="mb-0">@ViewBag.CustomerCount</h4>
                <small class="text-muted">Customers</small>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 mb-3">
        <div class="card h-100">
            <div class="card-body text-center">
                <h4 class="mb-0">@ViewBag.ProductCount</h4>
                <small class="text-muted">Products</small>
            </div>
        </div>
    </div>
    @if (Convert.ToInt32(ViewBag.LowStockCount) > 0)
    {
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card h-100 border-warning">
                <div class="card-body text-center">
                    <h4 class="mb-0 text-warning">@ViewBag.LowStockCount</h4>
                    <small class="text-muted">Low Stock Items</small>
                </div>
            </div>
        </div>
    }
</div>

