@model List<dynamic>
@{
    ViewData["Title"] = "Inventory Report";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-box-seam me-2"></i>Inventory Report</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to Reports
    </a>
</div>

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card bg-primary text-white">
            <div class="card-body text-center">
                <h6 class="text-white-50">Total Products</h6>
                <h2 class="mb-0">@ViewBag.ProductCount</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-info text-white">
            <div class="card-body text-center">
                <h6 class="text-white-50">Total Items in Stock</h6>
                <h2 class="mb-0">@ViewBag.TotalItems</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <h6 class="text-white-50">Total Inventory Value</h6>
                <h2 class="mb-0">@(((decimal)ViewBag.TotalValue).ToString("N2")) ₺</h2>
            </div>
        </div>
    </div>
</div>

<!-- Product List -->
<div class="card">
    <div class="card-header">
        <strong>Product Details</strong>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Brand</th>
                        <th>Type</th>
                        <th class="text-center">Stock</th>
                        <th class="text-end">Unit Price</th>
                        <th class="text-end">Stock Value</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="@(item.StockQuantity < 5 ? "table-warning" : "")">
                            <td>@item.ProductID</td>
                            <td><strong>@item.Brand</strong></td>
                            <td><span class="badge bg-secondary">@item.ProductType</span></td>
                            <td class="text-center">
                                @if (item.StockQuantity < 5)
                                {
                                    <span class="text-danger fw-bold">@item.StockQuantity</span>
                                    <i class="bi bi-exclamation-triangle text-warning ms-1"></i>
                                }
                                else
                                {
                                    @item.StockQuantity
                                }
                            </td>
                            <td class="text-end">@item.Price.ToString("N2") ₺</td>
                            <td class="text-end fw-bold">@item.StockValue.ToString("N2") ₺</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

