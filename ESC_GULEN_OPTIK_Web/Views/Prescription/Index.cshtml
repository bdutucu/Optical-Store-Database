@model List<ESC_GULEN_OPTIK_Web.Models.Prescription>
@{
    ViewData["Title"] = ViewBag.CustomerName != null ? $"Prescriptions - {ViewBag.CustomerName}" : "All Prescriptions";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="bi bi-file-medical me-2"></i>@ViewData["Title"]</h2>
        @if (ViewBag.CustomerName != null)
        {
            <a asp-action="Index" class="btn btn-sm btn-outline-secondary mt-2">
                <i class="bi bi-arrow-left me-1"></i>View All Prescriptions
            </a>
        }
    </div>
    <div>
        @if (ViewBag.CustomerId != null)
        {
            <a asp-action="Create" asp-route-customerId="@ViewBag.CustomerId" class="btn btn-success">
                <i class="bi bi-plus-circle me-1"></i>Add Prescription for @ViewBag.CustomerName
            </a>
        }
        else
        {
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle me-1"></i>New Prescription
            </a>
        }
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        @if (Model.Count == 0)
        {
            <div class="text-center py-5">
                <i class="bi bi-file-medical display-1 text-muted"></i>
                <p class="lead mt-3">No prescriptions found.</p>
                <a asp-action="Create" class="btn btn-primary">Create First Prescription</a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Date</th>
                            <th>Customer</th>
                            <th>Doctor</th>
                            <th>Right Eye</th>
                            <th>Left Eye</th>
                            <th>Examined By</th>
                            <th width="150">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@item.DateOfPrescription.ToString("dd.MM.yyyy")</strong>
                                </td>
                                <td>
                                    <a asp-controller="Customer" asp-action="Details" asp-route-id="@item.CustomerID">
                                        @item.CustomerName
                                    </a>
                                </td>
                                <td>
                                    @if (string.IsNullOrEmpty(item.DoctorName))
                                    {
                                        <span class="badge bg-info">Internal Exam</span>
                                    }
                                    else
                                    {
                                        @item.DoctorName
                                    }
                                </td>
                                <td>
                                    @if (item.Right_SPH.HasValue)
                                    {
                                        <small>
                                            <span class="badge bg-secondary">SPH: @item.Right_SPH.Value.ToString("+0.00;-0.00")</span>
                                            <span class="badge bg-secondary">CYL: @(item.Right_CYL?.ToString("+0.00;-0.00") ?? "0")</span>
                                            <span class="badge bg-secondary">AX: @(item.Right_AX ?? 0)°</span>
                                        </small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Left_SPH.HasValue)
                                    {
                                        <small>
                                            <span class="badge bg-secondary">SPH: @item.Left_SPH.Value.ToString("+0.00;-0.00")</span>
                                            <span class="badge bg-secondary">CYL: @(item.Left_CYL?.ToString("+0.00;-0.00") ?? "0")</span>
                                            <span class="badge bg-secondary">AX: @(item.Left_AX ?? 0)°</span>
                                        </small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>@(item.StaffName ?? "-")</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@item.PrescriptionID" class="btn btn-outline-info" title="Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.PrescriptionID" class="btn btn-outline-primary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.PrescriptionID" class="btn btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

